<% include('../layouts/header.ejs') %>


    <h1>Edit User</h1>

    <form action="" method="post">
        <input type="name" name="name" placeholder="enter Name" value="<%= user.name %>">
        <br><br>
        <input type="number" name="mobile" placeholder="enter mobile no" value="<%= user.mobile %>">
        <br><br>
        <label>Verified</label>
        <input type="radio" name="verify" value="1" <% if(user.is_verified==1){ %>Checked <% } %> >
            <label>Not Verified</label>
            <input type="radio" name="verify" value="0" <% if(user.is_verified==0){ %>Checked <% } %> >
                <br><br>
                <input type="hidden" name="id" value="<%= user._id %>">
                <input type="submit" value="Update">
    </form>
    <a href="/admin/">Go Dashboard</a>

